<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Result_tic_tac_toe"
    android:background="@drawable/tic_tac_design">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_gravity="center"
        android:elevation="30dp"
        app:cardCornerRadius="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Results"
            android:gravity="center"
            android:textSize="36dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="20dp"
            android:textStyle="bold"
            android:textColor="@color/bluish_color"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="result displayed here........"
                android:layout_margin="16dp"
                android:id="@+id/result_tic_tac_toe"
                android:padding="12dp"
                android:textSize="20dp"
                android:layout_marginBottom="16dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/bluish_color"
                android:text="Play Again"
                android:id="@+id/play_again_tic_tac_toe"
                android:textSize="20dp"
                android:layout_margin="16dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/bluish_color"
                android:text="Back Home"
                android:id="@+id/back_button_tic_tac_toe"
                android:textSize="20dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>



</LinearLayout>